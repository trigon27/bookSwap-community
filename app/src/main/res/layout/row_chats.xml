<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="32dp"
    android:padding="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    >

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/convergence"
        android:text="ashraf shaikh"
        android:textColor="#191616"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ChatlistLastmessage"
        app:layout_constraintEnd_toStartOf="@+id/chatlistDate"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/chatlistprofiel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <TextView
        android:id="@+id/chatlistDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/convergence"
        android:text="3:10:2003 7:20"
        android:textColor="#70949D"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ChatlistLastmessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/chatlistprofiel"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ChatlistLastmessage"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457">
        <ImageView
            android:id="@+id/chatListprofilepic"
            android:layout_width="62dp"
            android:layout_height="58dp"
            android:background="@drawable/roundshape"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/ChatlistLastmessage"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginLeft="22dp"
        android:textColor="@color/black"
        android:text="qtwepdoask asnd oyr msenf mee nwofkjasfheunvvh "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827" />


</androidx.constraintlayout.widget.ConstraintLayout>
